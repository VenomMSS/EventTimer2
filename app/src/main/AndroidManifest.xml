<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.spiddalsoftware.gearoid.eventtimer">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".EntryActivity"
            android:label="@string/title_activity_entry" />
        <activity
            android:name=".FileSaveActivity"
            android:label="@string/title_filesave_activity" />
        <activity
            android:name=".ListActivity"
            android:label="@string/title_listactivity" />
        <activity
            android:name=".HelpActivity"
            android:label="Help for EventTimer App." />
        <activity
            android:name=".AboutActivity"
            android:label="@string/aboutActivitytitle">
        </activity>
        <activity
            android:name=".list2Activity"
            android:label="@string/title_listactivity">

        </activity>
    </application>

</manifest>
